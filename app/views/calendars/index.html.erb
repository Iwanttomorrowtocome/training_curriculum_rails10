
  <!-- 日付と予定を入力するフォーム -->
  <div class="form-container">
    <%= form_with model: @plan, url: calendars_path, local: true, class: 'form' do |f| %>
      <div class="form-field">
        <%= f.label :date, "日付を選択", class: 'label' %>
        <%= f.date_field :date, class: 'date-select' %>
      </div>
      <div class="form-field">
        <%= f.label :plan, "予定を入力", class: 'label' %>
        <%= f.text_field :plan, class: 'text-input' %>
      </div>
      <%= f.submit '保存', class: 'submit-button' %>
    <% end %>
  </div>

  <!-- カレンダー表示 -->
  <div class='calendar'>
    <% @week_days.each do |day| %>
      <div class='item'>
        <div class='date'>
          <%= day[:month] %>/<%= day[:date] %><%= day[:wday] %> <!-- 日付と曜日を表示 -->
        </div>
        <ul class='content'>
          <% day[:plans].each do |plan| %>
            <li class='plan-list'>・<%= plan %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>



